#!/usr/bin/env ruby

require_relative '../lib/livetext'

def handle_ltx(src)
  abort "Unknown file extension" unless src =~ /.ltx$/
end

# Main

x = Livetext.new

case ARGV.first 
  when  "-v", "--version"
    puts "#{Livetext::VERSION}\n "
  when "-t", "--test"
    dir = File.dirname(__FILE__)
    system("ruby #{dir}/../test/test.rb")
  when "-s", "--stdin"
    src = STDIN.read
    x.process(src)
  when nil
    puts <<-EOF
    Usage: 
      livetext -v
      livetext --version
      livetext filename
    EOF
    puts
  when Object
    src = ARGV.first
    x.process_file(src)
end

