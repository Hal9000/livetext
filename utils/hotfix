#!/usr/bin/env ruby

def sys(str)
  puts str
  system str
end

version = `livetext -v`.strip
lib = "/Users/Hal/.rvm/gems/ruby-2.7.0/gems/livetext-#{version}/lib/"
puts lib.inspect

sys("cp -r lib/* #{lib}/")
sys("cp plugin/* #{lib}/../plugin/")
sys("cp imports/* #{lib}/../imports/")
sys("cp -r test/* #{lib}/../test/")
sys("cp bin/* #{lib}/../bin/")

