#!/usr/bin/env ruby

lib = ARGV.first || `livetext -p`.chomp.chomp
puts lib.inspect

system("cp lib/* #{lib}/")
system("cp plugin/* #{lib}/../plugin/")
system("cp test/*rb #{lib}/../test/")
system("cp test/unit/*rb #{lib}/../test/unit/")
system("cp -r test/data/* #{lib}/../test/data/")
system("cp bin/* #{lib}/../bin/")
